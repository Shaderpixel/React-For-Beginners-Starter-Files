/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transition all 400ms
  transform: translateX(-120%)
  max-height 0
  opacity 0
  padding 0 !important
  &.order-enter-active
    transform translateX(0)
    max-height 60px
    opacity 1
    padding 2rem 0 !important

.order-leave
  transition all 400ms
  transform translateX(0)
  &.order-leave-active
    transform translateX(120%)
    max-height 0
    padding 0

.count-enter
  transition all 250ms
  transform translateY(100%) // start off screen
  &.count-enter-active
    transform translateY(0) // put it in it's matural resting place

.count-leave
  transition all 250ms
  position absolute //so that the new and old values are not side by side but overlay each other
  left 0
  bottom 0
  transform translateY(0) // start it where it is
  &.count-leave-active
    transform translateY(-100%) // go off boundaries